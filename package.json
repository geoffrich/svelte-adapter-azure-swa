{
	"name": "svelte-adapter-azure-swa-next",
	"description": "SvelteKit adapter for Azure Static Web Apps.",
	"version": "0.21.12",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"format": "npm run check-format -- --write",
		"check-format": "prettier --check .",
		"check-types": "tsc --skipLibCheck",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"changeset:version": "changeset version && git add --all",
		"changeset:publish": "changeset publish"
	},
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./index.js"
		},
		"./package.json": "./package.json"
	},
	"license": "MIT",
	"keywords": [
		"svelte",
		"sveltekit",
		"sveltekit-adapter",
		"azure",
		"staticwebapp"
	],
	"homepage": "https://github.com/geoffrich/svelte-adapter-azure-swa#readme",
	"bugs": {
		"url": "https://github.com/geoffrich/svelte-adapter-azure-swa/issues"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0"
	},
	"devDependencies": {
		"@azure/functions": "^4",
		"@changesets/cli": "^2.28.1",
		"@sveltejs/kit": "^2.20.5",
		"@types/node": "^22.0.0",
		"@types/set-cookie-parser": "^2.4.7",
		"prettier": "^3.1.1",
		"typescript": "^5.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"esbuild": "^0.25.0",
		"set-cookie-parser": "^2.6.0"
	},
	"files": [
		"files",
		"index.js",
		"index.d.ts",
		"types"
	]
}
