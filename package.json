{
	"name": "svelte-adapter-azure-swa",
	"description": "SvelteKit adapter for Azure Static Web Apps.",
	"version": "0.18.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"format": "npm run check-format -- --write",
		"check-format": "prettier --check .",
		"check-types": "tsc --skipLibCheck",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./index.js"
		},
		"./package.json": "./package.json"
	},
	"license": "MIT",
	"keywords": [
		"svelte",
		"sveltekit",
		"sveltekit-adapter",
		"azure",
		"staticwebapp"
	],
	"homepage": "https://github.com/geoffrich/svelte-adapter-azure-swa#readme",
	"bugs": {
		"url": "https://github.com/geoffrich/svelte-adapter-azure-swa/issues"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^1.0.0"
	},
	"devDependencies": {
		"@azure/functions": "^1.2.3",
		"@sveltejs/kit": "^1.8.8",
		"@types/node": "^17.0.5",
		"@types/set-cookie-parser": "^2.4.2",
		"@vitest/coverage-c8": "^0.23.4",
		"prettier": "^2.4.1",
		"typescript": "~4.8.4",
		"vitest": "^0.23.4"
	},
	"dependencies": {
		"esbuild": "^0.15.7",
		"set-cookie-parser": "^2.5.1"
	},
	"files": [
		"files",
		"index.js",
		"index.d.ts",
		"types"
	]
}
