{
	"name": "sveltekit-azure-swa-demo",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"prepare": "npm ci --prefix .. && ../scripts/npm-link.sh && (svelte-kit sync || echo '')",
		"build": "svelte-kit sync && vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"dev": "vite dev",
		"swa": "swa start",
		"preview": "vite preview",
		"test": "playwright test",
		"test:swa": "SWA=true npm run test"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "^2.0.6",
		"@fontsource/fira-mono": "^5.2.5",
		"@neoconfetti/svelte": "^2.2.2",
		"@playwright/test": "^1.51.1",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"svelte": "^5.28.2",
		"svelte-adapter-azure-swa": "file:..",
		"svelte-check": "^4.1.5",
		"typescript": "^5.8.2",
		"vite": "^6.3.4"
	},
	"engines": {
		"node": ">=20 <21"
	}
}
